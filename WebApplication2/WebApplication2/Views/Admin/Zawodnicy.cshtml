@model IEnumerable<WebApplication2.Models.DB.DRIVERS>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Zawodnicy</title>
</head>
<body>
    <p>
        @Html.ActionLink("Dodaj zawodnika", "Stworz_zawodnika")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Driver_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edytuj_zawodnika", new { id = item.Driver_ID }) |
                    @Html.ActionLink("Szczegóły", "Szczegoly_zawodnika", new { id = item.Driver_ID }) |
                    @Html.ActionLink("Usuń", "Usun_zawodnika", new { id = item.Driver_ID })
                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Wróć do panelu administratora", "Panel")
</body>
</html>
