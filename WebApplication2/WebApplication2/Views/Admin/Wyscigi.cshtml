@model IEnumerable<WebApplication2.Models.DB.RACES>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wyścigi</title>
</head>
<body>
    <p>
        @Html.ActionLink("Dodaj wyścig", "Stworz_wyscig")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Track)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEASONS.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DRIVERS.Driver_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DRIVERS2.Driver_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DRIVERS3.Driver_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Track)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEASONS.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DRIVERS.Driver_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DRIVERS2.Driver_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DRIVERS3.Driver_Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edytuj_wyscig", new { id = item.Race_ID }) |
                    @Html.ActionLink("Szczegóły", "Szczegoly_wyscigu", new { id = item.Race_ID }) |
                    @Html.ActionLink("Usuń", "Usun_wyscig", new { id = item.Race_ID })
                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Wróć do panelu administratora", "Panel")
</body>
</html>
